<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="300">

        <OnSwipe
            app:dragDirection="dragLeft"
            app:maxAcceleration="50"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/sign_up_root"
            app:touchAnchorSide="left" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/login_text"
            android:layout_width="250dp"
            android:layout_height="50dp">

            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/login_root"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/login_root"
                app:layout_constraintVertical_bias="0.9" />

            <Transform android:rotation="0" />

            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="36" />
        </Constraint>

        <Constraint
            android:id="@id/sign_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/sign_up_root"
                app:layout_constraintTop_toTopOf="parent" />

            <Transform android:rotation="-90" />

            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="16" />
        </Constraint>

        <Constraint
            android:id="@id/login_root"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.9" />
        </Constraint>

        <Constraint
            android:id="@+id/sign_up_root"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/login_root"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/login_root"
                app:layout_constraintStart_toStartOf="@id/login_root"
                app:layout_constraintTop_toTopOf="parent" />

            <Transform android:rotation="-90" />

            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="16" />
        </Constraint>

        <Constraint
            android:id="@id/sign_up_text"
            android:layout_width="250dp"
            android:layout_height="50dp">

            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/sign_up_root"
                app:layout_constraintStart_toStartOf="@+id/sign_up_root"
                app:layout_constraintTop_toTopOf="@+id/sign_up_root"
                app:layout_constraintVertical_bias="0.9" />

            <Transform android:rotation="0" />

            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="36" />
        </Constraint>

        <Constraint
            android:id="@id/login_root"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1" />
        </Constraint>

        <Constraint
            android:id="@+id/sign_up_root"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/login_root"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.9" />
        </Constraint>
    </ConstraintSet>
</MotionScene>