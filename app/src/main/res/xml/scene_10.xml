<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="none"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start">

        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="50"
                motion:motionTarget="@+id/appLogo"
                motion:percentX="-0.6" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="70"
                motion:motionTarget="@+id/appName" />

            <KeyPosition
                motion:framePosition="70"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/appName"
                motion:percentX="1" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/appLogo">
            <Layout
                android:layout_width="250dp"
                android:layout_height="250dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintVertical_bias="0.7" />
        </Constraint>

        <Constraint
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Layout
                motion:layout_constraintBottom_toBottomOf="@id/appLogo"
                motion:layout_constraintLeft_toLeftOf="@id/appLogo"
                motion:layout_constraintRight_toRightOf="parent"
                motion:layout_constraintTop_toTopOf="@id/appLogo" />

            <PropertySet android:alpha="0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/appLogo">
            <Layout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="15dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintLeft_toLeftOf="parent" />
        </Constraint>

        <Constraint
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Layout
                motion:layout_constraintBottom_toBottomOf="@id/appLogo"
                motion:layout_constraintLeft_toLeftOf="@id/appLogo"
                motion:layout_constraintRight_toRightOf="parent"
                motion:layout_constraintTop_toTopOf="@id/appLogo" />
            <PropertySet android:alpha="1" />
        </Constraint>
    </ConstraintSet>
</MotionScene>