<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:autoTransition="none"
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start">

        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:motionTarget="@+id/appLogo"
                app:percentX="-0.6" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="70"
                app:motionTarget="@+id/appName" />

            <KeyPosition
                app:framePosition="70"
                app:keyPositionType="parentRelative"
                app:motionTarget="@+id/appName"
                app:percentX="1" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/appLogo">
            <Layout
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.7" />
        </Constraint>

        <Constraint
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Layout
                app:layout_constraintBottom_toBottomOf="@id/appLogo"
                app:layout_constraintLeft_toLeftOf="@id/appLogo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/appLogo" />

            <PropertySet android:alpha="0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/appLogo">
            <Layout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />
        </Constraint>

        <Constraint
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Layout
                app:layout_constraintBottom_toBottomOf="@id/appLogo"
                app:layout_constraintLeft_toLeftOf="@id/appLogo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/appLogo" />

            <PropertySet android:alpha="1" />
        </Constraint>
    </ConstraintSet>
</MotionScene>