<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/scene_5_todo"
    tools:ignore="HardcodedText">

    <View
        android:id="@+id/login_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorLoginSection" />

    <View
        android:id="@+id/sign_up_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorSignInSection" />

    <!--TODO change to ImageFilterView (use ic_cat_with_glasses_white)-->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/ic_cat_with_glasses" />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:gravity="center"
        android:singleLine="true"
        android:text="LOG IN"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/sign_up_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:gravity="center"
        android:singleLine="true"
        android:text="SIGN UP"
        android:textColor="@color/White" />

</androidx.constraintlayout.motion.widget.MotionLayout>