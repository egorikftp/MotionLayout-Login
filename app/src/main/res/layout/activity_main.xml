<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_0"
            style="@style/ButtonStyle"
            android:text="Scene 1 (initial)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_1"
            style="@style/ButtonStyle"
            android:text="Scene 1 (with text)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_2"
            style="@style/ButtonStyle"
            android:text="Scene 2 (swipes)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_3"
            style="@style/ButtonStyle"
            android:text="Scene 3 (Image)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_4"
            style="@style/ButtonStyle"
            android:text="Scene 4 (Input Login)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_5"
            style="@style/ButtonStyle"
            android:text="Scene 5 (Input Sign In)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_6"
            style="@style/ButtonStyle"
            android:text="Scene 6 (?)" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>