<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_1"
            style="@style/ButtonStyle"
            android:text="Scene 1 (Initial)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_2"
            style="@style/ButtonStyle"
            android:text="Scene 2 (Add Text)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_3"
            style="@style/ButtonStyle"
            android:text="Scene 3 (Swipes)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_4"
            style="@style/ButtonStyle"
            android:text="Scene 4 (ImageFilterView)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_5"
            style="@style/ButtonStyle"
            android:text="Scene 5 (Input for Login)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_6"
            style="@style/ButtonStyle"
            android:text="Scene 6 (Input with KeyFrameSet)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_7"
            style="@style/ButtonStyle"
            android:text="Scene 7 (Input for Sign In)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_8"
            style="@style/ButtonStyle"
            android:text="Scene 8 (Transition listener)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scene_9"
            style="@style/ButtonStyle"
            android:text="Scene 9 (?)" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>