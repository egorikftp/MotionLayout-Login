<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/White"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/motion_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="80dp"
            app:layoutDescription="@xml/scene_coordinator"
            app:layout_scrollFlags="scroll|enterAlways|snap|exitUntilCollapsed">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_cat_vector" />

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motion Cats"
                android:textColor="@color/Black"
                android:textSize="30sp" />
        </androidx.constraintlayout.motion.widget.MotionLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_1"
                    style="@style/ButtonStyleFinal"
                    android:text="Step 1 \n(Initial)" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_1_todo"
                    style="@style/ButtonStyleTodo"
                    android:layout_gravity="center_vertical"
                    android:text="Step 1 (TODO)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_2"
                    style="@style/ButtonStyleFinal"
                    android:text="Step 2 \n(Text Rotation)" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_2_todo"
                    style="@style/ButtonStyleTodo"
                    android:layout_gravity="center_vertical"
                    android:text="Step 2 (TODO)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_3"
                    style="@style/ButtonStyleFinal"
                    android:text="Step 3 \n(Text Size)" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_3_todo"
                    style="@style/ButtonStyleTodo"
                    android:layout_gravity="center_vertical"
                    android:text="Step 3 (TODO)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_4"
                    style="@style/ButtonStyleFinal"
                    android:text="Step 4 \n(Swipes)" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_4_todo"
                    style="@style/ButtonStyleTodo"
                    android:layout_gravity="center_vertical"
                    android:text="Step 4 (TODO)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_5"
                    style="@style/ButtonStyleFinal"
                    android:text="Step 5 (ImageFilterView)" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_5_todo"
                    style="@style/ButtonStyleTodo"
                    android:layout_gravity="center_vertical"
                    android:text="Step 5 (TODO)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_6"
                    style="@style/ButtonStyleFinal"
                    android:text="Step 6 \n(Input for Login)" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_6_todo"
                    style="@style/ButtonStyleTodo"
                    android:layout_gravity="center_vertical"
                    android:text="Step 6 (TODO)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_7"
                    style="@style/ButtonStyleFinal"
                    android:text="Step 7 \n(Add KeyFrameSet)" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_7_todo"
                    style="@style/ButtonStyleTodo"
                    android:layout_gravity="center_vertical"
                    android:text="Step 7 (TODO)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_8"
                    style="@style/ButtonStyleFinal"
                    android:text="Step 8 \n(Input for Sign In)" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_8_todo"
                    style="@style/ButtonStyleTodo"
                    android:layout_gravity="center_vertical"
                    android:text="Step 8 (TODO)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_9"
                    style="@style/ButtonStyleFinal"
                    android:text="Step 9 \n(Transition listener)" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/step_9_todo"
                    style="@style/ButtonStyleTodo"
                    android:layout_gravity="center_vertical"
                    android:text="Step 9 (TODO)" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>